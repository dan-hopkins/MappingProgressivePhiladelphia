<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:background="#B0C4DE"

    android:layout_height="match_parent">
    <!--
    android:layout_marginLeft="30dp"
    android:layout_marginTop = "60dp"
    android:layout_marginRight="30dp"
    android:layout_marginBottom="100dp"
    android:background="#ff616161"> -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#B0C4DE"

        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/org_pic"
            android:layout_height="0dp"
            android:padding="0dp"
            android:layout_weight=".9"
            android:scaleType="fitCenter"
            android:src="@drawable/default_pic"
            android:background="#B0C4DE"
            android:maxWidth="@dimen/com_facebook_profilepictureview_preset_size_large"
            android:maxHeight="@dimen/com_facebook_profilepictureview_preset_size_large" />


        />

        <TextView
            android:layout_height="0dp"
            android:layout_width="match_parent"
            android:id="@+id/orgname"
            android:textSize="30sp"
            android:background= "#B0C4DE"
            android:layout_marginTop="0dp"
            android:textAlignment="center"
            android:includeFontPadding="false"
            android:gravity="center"
            android:layout_weight=".2"
            android:padding="0dp"
            android:singleLine="false"
            android:layout_marginBottom="4dp"
            android:maxLines="4"
            />

        <ImageView
            android:id="@+id/item_swipe_right_indicator"
            android:alpha="0"
            android:rotation="20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="30dp"
            android:layout_gravity="right"
            android:adjustViewBounds="true"
            android:src="@drawable/nope"
            />

        <ImageView
            android:id="@+id/item_swipe_left_indicator"
            android:alpha="0"
            android:rotation="-20"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_margin="30dp"
            android:adjustViewBounds="true"
            android:layout_gravity="left"
            android:src="@drawable/yup"
            />


    </LinearLayout>



</FrameLayout>